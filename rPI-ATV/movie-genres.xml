<?xml version="1.0" encoding="UTF-8"?>
<atv>
  <head>
    <script src="http://__IP_ADDR__/js/main.js"/>
  </head>
  <body>
    <listWithPreview id="com.sample.main">
      <header>
        <simpleHeader accessibilityLabel="Sample-xml main">
          <title>Genres</title>
          <image required="true">http://__IP_ADDR__/pi/images/DASnet-atv.png</image>
        </simpleHeader>
      </header>

      <preview>
        <paradePreview inOrder="true">
          <image>http://__IP_ADDR__/images/movie1.png</image>
          <image>http://__IP_ADDR__/images/movie2.png</image>
          <image>http://__IP_ADDR__/images/movie3.png</image>
          <image>http://__IP_ADDR__/images/movie4.png</image>
          <image>http://__IP_ADDR__/images/movie5.png</image>
          <image>http://__IP_ADDR__/images/movie6.png</image>
          <image>http://__IP_ADDR__/images/movie7.png</image>
        </paradePreview>
      </preview>
      <menu>
        <sections>
          <menuSection>
            <items>
              <oneLineMenuItem id="list_0" accessibilityLabel="Favorites" onSelect="atv.loadURL('http://__IP_ADDR__/movie-grid.xml');">
                <label>Kids</label>
              </oneLineMenuItem>
              <oneLineMenuItem id="list_1" accessibilityLabel="Drama" onSelect="atv.loadURL('http://__IP_ADDR__/movie-grid.xml');">
                <label>Drama</label>
              </oneLineMenuItem>
              <oneLineMenuItem id="list_2" accessibilityLabel="Educational" onSelect="atv.loadURL('http://__IP_ADDR__/movie-grid.xml');">
                <label>Educational</label>
              </oneLineMenuItem>
              <oneLineMenuItem id="list_3" accessibilityLabel="Action / Adventure" onSelect="atv.loadURL('http://__IP_ADDR__/movie-genres.xml');">
                <label>Action / Adventure</label>
              </oneLineMenuItem>
              <oneLineMenuItem id="list_4" accessibilityLabel="Sci-Fi / Fantasy" onSelect="atv.loadURL('http://__IP_ADDR__/movie-list.xml');">
                <label>Sci-Fi / Fantasy</label>
              </oneLineMenuItem>
              <oneLineMenuItem id="list_5" accessibilityLabel="Western" onSelect="atv.loadURL('http://__IP_ADDR__/movie-search.xml');">
                <label>Western</label>
              </oneLineMenuItem>
            </items>
          </menuSection>
        </sections>
      </menu>
    </listWithPreview>
  </body>
</atv>
